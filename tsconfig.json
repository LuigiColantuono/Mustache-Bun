{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noEmit": true,
    "types": ["bun-types"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["mustache.js", "mustache.d.ts", "eslint.config.mjs"]
}
